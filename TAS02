{
  "properties": {
    "displayName": "Only secure connections to Azure Cache for Redis (Enforcement)",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Ensure non-SSL ports are disabled on Azure Cache for Redis.",
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "The effect determines what happens when the policy rule is evaluated to match"
        },
        "allowedValues": [
          "Audit",
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Cache/redis"
          },
          {
            "field": "Microsoft.Cache/Redis/enableNonSslPort",
            "equals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Cache/redis",
          "roleDefinitionIds": [
            "/subscriptions/413f9374-8e04-4a96-987a-2df36a471516/providers/Microsoft.Authorization/policyDefinitions/648634a6-fbc1-45e8-8252-ffb74f2d1456"
          ],
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "resources": [
                  {
                    "type": "Microsoft.Cache/redis",
                    "apiVersion": "2023-07-01",
                    "name": "[field('name')]",
                    "properties": {
                      "enableNonSslPort": false
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}
