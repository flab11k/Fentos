                  {
                    "type": "Microsoft.Insights/diagnosticSettings",
                    "apiVersion": "2021-05-01-preview",
                    "name": "[concat('diag-', field('name'))]",
                    "properties": {
                      "workspaceId": "/subscriptions/413f9374-8e04-4a96-987a-2df36a471516/resourceGroups/DefaultRG/providers/Microsoft.OperationalInsights/workspaces/DefaultWorkspace",
