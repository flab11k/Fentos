{
  "properties": {
    "displayName": "Enable diagnostic settings for AKS clusters (Enforcement)",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Ensures that AKS clusters have diagnostic settings enabled and logs are sent to a Log Analytics workspace with the required retention period.",
    "metadata": {
      "category": "Monitoring",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "allowedValues": [
          "AuditIfNotExists",
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        }
      },
      "requiredRetentionDays": {
        "type": "Int",
        "defaultValue": 365,
        "metadata": {
          "displayName": "Required Retention (days)",
          "description": "The number of days logs should be retained"
        }
      },
      "logAnalyticsWorkspaceId": {
        "type": "String",
        "metadata": {
          "displayName": "Log Analytics Workspace Resource ID",
          "description": "Resource ID of the Log Analytics workspace where AKS logs will be sent"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.ContainerService/managedClusters"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Insights/diagnosticSettings",
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/4633458b-17de-408a-b874-0445c86b69e6"
          ],
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "resources": [
                  {
                    "type": "Microsoft.Insights/diagnosticSettings",
                    "apiVersion": "2021-05-01-preview",
                    "name": "[concat('diag-', field('name'))]",
                    "properties": {
                      "workspaceId": "[parameters('logAnalyticsWorkspaceId')]",
                      "logs": [
                        {
                          "category": "kube-audit",
                          "enabled": true,
                          "retentionPolicy": {
                            "enabled": true,
                            "days": "[parameters('requiredRetentionDays')]"
                          }
                        },
                        {
                          "category": "kube-apiserver",
                          "enabled": true,
                          "retentionPolicy": {
                            "enabled": true,
                            "days": "[parameters('requiredRetentionDays')]"
                          }
                        },
                        {
                          "category": "kube-controller-manager",
                          "enabled": true,
                          "retentionPolicy": {
                            "enabled": true,
                            "days": "[parameters('requiredRetentionDays')]"
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}
